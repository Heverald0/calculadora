<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#f5f5f5"
    tools:context=".MainActivity">

    <!-- Display -->
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="#000"
        android:textSize="48sp" />

    <!-- Primeira linha: Funções -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:columnCount="4"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnSqrt"
            style="@style/CalcButtonRed"
            android:text="√" />

        <Button
            android:id="@+id/btnQuadrado"
            style="@style/CalcButtonRed"
            android:text="x²" />

        <Button
            android:id="@+id/btnPotencia"
            style="@style/CalcButtonRed"
            android:text="xʸ" />

        <Button
            android:id="@+id/btnInverso"
            style="@style/CalcButtonRed"
            android:text="1/x" />

        <Button
            android:id="@+id/btnSen"
            style="@style/CalcButtonRed"
            android:text="sen" />

        <Button
            android:id="@+id/btnCos"
            style="@style/CalcButtonRed"
            android:text="cos" />

        <Button
            android:id="@+id/btnTan"
            style="@style/CalcButtonRed"
            android:text="tan" />

        <Button
            android:id="@+id/btnFatorial"
            style="@style/CalcButtonRed"
            android:text="n!" />

        <Button
            android:id="@+id/btnLn"
            style="@style/CalcButtonRed"
            android:text="ln" />

        <Button
            android:id="@+id/btnLog"
            style="@style/CalcButtonRed"
            android:text="log" />

        <Button
            android:id="@+id/btnE"
            style="@style/CalcButtonRed"
            android:text="e" />

        <Button
            android:id="@+id/btnPi"
            style="@style/CalcButtonRed"
            android:text="π" />

        <Button
            android:id="@+id/btnParentOpen"
            style="@style/CalcButtonRed"
            android:text="(" />

        <Button
            android:id="@+id/btnParentClose"
            style="@style/CalcButtonRed"
            android:text=")" />

        <Button
            android:id="@+id/btnSinal"
            style="@style/CalcButtonRed"
            android:text="±" />

        <Button
            android:id="@+id/btnClear"
            style="@style/CalcButtonRed"
            android:text="C" />
    </GridLayout>

    <!-- Segunda linha: Memória -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:paddingTop="8dp">

        <Button android:id="@+id/btnCE" android:text="CE" style="@style/CalcButton" />
        <Button android:id="@+id/btnMR" android:text="MR" style="@style/CalcButton" />
        <Button android:id="@+id/btnMmais" android:text="M+" style="@style/CalcButton" />
        <Button android:id="@+id/btnMmenos" android:text="M-" style="@style/CalcButton" />
    </GridLayout>

    <!-- Teclado numérico -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnSete"
            style="@style/CalcButton"
            android:text="7" />

        <Button
            android:id="@+id/btnOito"
            style="@style/CalcButton"
            android:text="8" />

        <Button
            android:id="@+id/btnNove"
            style="@style/CalcButton"
            android:text="9" />

        <Button
            android:id="@+id/btnDividir"
            style="@style/CalcButton"
            android:text="/" />

        <Button
            android:id="@+id/btnQuatro"
            style="@style/CalcButton"
            android:text="4" />

        <Button
            android:id="@+id/btnCinco"
            style="@style/CalcButton"
            android:text="5" />

        <Button
            android:id="@+id/btnSeis"
            style="@style/CalcButton"
            android:text="6" />

        <Button
            android:id="@+id/btnVezes"
            style="@style/CalcButton"
            android:text="x" />

        <Button
            android:id="@+id/btnUm"
            style="@style/CalcButton"
            android:text="1" />

        <Button
            android:id="@+id/btnDois"
            style="@style/CalcButton"
            android:text="2" />

        <Button
            android:id="@+id/btnTres"
            style="@style/CalcButton"
            android:text="3" />

        <Button
            android:id="@+id/btnMenos"
            style="@style/CalcButton"
            android:text="-" />

        <Button
            android:id="@+id/btnZero"
            style="@style/CalcButton"
            android:text="0" />

        <Button
            android:id="@+id/btnPonto"
            style="@style/CalcButton"
            android:text="." />

        <Button
            android:id="@+id/btnIgual"
            style="@style/CalcButtonEquals"
            android:text="=" />

        <Button
            android:id="@+id/btnMais"
            style="@style/CalcButton"
            android:text="+" />
    </GridLayout>
</LinearLayout>
